<%= form_for @comment do |f| %>
  <div class='form-group'>
    <%= f.hidden_field :link_id, :value => @link.id %>
    <div class="form-group">
      <%= f.label :statement, "Your thoughts:" %>
      <%= f.text_area :statement, rows:10, :class => "form-control" %>
    </div>
  </div>
    <%= f.submit(:class => "btn btn-primary") %>

<% end %>
